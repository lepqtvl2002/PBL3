
@{
    ViewBag.Title = "Profile";
    Layout = "~/Areas/Staffs/Views/Shared/_LayoutStaff.cshtml";
}
<!-- Page Content -->
<div class="row">
    <div class="col-md-4 col-xs-12">
        <div class="white-box">
            <div class="user-bg">
                <img width="100%" alt="user" src="~/Public/plugins/images/users/varun.jpg">
                <div class="overlay-box">
                    <div class="user-content">
                        <a href="javascript:void(0)">
                            <img src="~/Public/plugins/images/users/varun.jpg"
                                 class="thumb-lg img-circle" alt="img">
                        </a>
                        <h4 class="text-white">@Session["StaffName"]</h4>
                        <h5 class="text-white">@Session["StaffEmail"]</h5>
                    </div>
                </div>
            </div>
            <div class="user-btm-box">
                <div class="col-md-4 col-sm-4 text-center">
                    <p class="text-purple"><i class="ti-facebook"></i></p>
                    <h1>258</h1>
                </div>
                <div class="col-md-4 col-sm-4 text-center">
                    <p class="text-blue"><i class="ti-twitter"></i></p>
                    <h1>125</h1>
                </div>
                <div class="col-md-4 col-sm-4 text-center">
                    <p class="text-danger"><i class="ti-dribbble"></i></p>
                    <h1>556</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-8 col-xs-12">
        <div class="white-box">
            <form class="form-horizontal form-material">
                <div class="form-group">
                    <label class="col-md-12">Full Name</label>
                    <div class="col-md-12">
                        <input type="text" placeholder="@Session["StaffName"]"
                               class="form-control form-control-line">
                    </div>
                </div>
                <div class="form-group">
                    <label for="example-email" class="col-md-12">Email</label>
                    <div class="col-md-12">
                        <input type="email" placeholder="@Session["StaffEmail"]"
                               class="form-control form-control-line" name="example-email"
                               id="example-email">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-12">Password</label>
                    <div class="col-md-12">
                        <input type="password" value="@Session["StaffPassword"]" class="form-control form-control-line">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-12">Phone No</label>
                    <div class="col-md-12">
                        <input type="text" placeholder="@Session["StaffPhone"]"
                               class="form-control form-control-line">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-6">
                        <button class="btn btn-success">Update Profile</button>
                    </div>
                    <div class="col-sm-6">
                        <a class="btn btn-primary pull-right" href="@Url.Action("Logout", "Auth")" role="button">Đăng xuất</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>




