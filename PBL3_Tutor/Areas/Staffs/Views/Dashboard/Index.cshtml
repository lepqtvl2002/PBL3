
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Staffs/Views/Shared/_LayoutStaff.cshtml";
}

<!-- Page Content -->
<h3 class="box-title">Trang chủ</h3>
<!-- row -->
<div class="row">
    <!--col -->
    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
        <div class="white-box">
            <div class="col-in row">
                <div class="col-md-8 col-sm-8 col-xs-8">
                    <i data-icon="E"
                       class="linea-icon linea-basic"></i>
                    <h5 class="text-muted vb">Khách hàng đăng ký thuê gia sư mới</h5>
                </div>
                <div class="col-md-4 col-sm-4 col-xs-4">
                    <h3 class="counter text-right m-t-15 text-danger">@Session["Customers"]</h3>
                </div>
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="progress">
                        <div class="progress-bar progress-bar-danger" role="progressbar"
                             aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
                            <span class="sr-only">40% Complete (success)</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div>
                        <a class="btn btn-primary" href="@Url.Action("Unconfirmed", "Students")" role="button">Danh sách thuê mới gia sư</a>
                    </div>
                    <br />
                </div>
            </div>
        </div>
    </div>
    <!-- /.col -->
    <!--col -->
    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
        <div class="white-box">
            <div class="col-in row">
                <div class="col-md-6 col-sm-6 col-xs-6">
                    <i class="linea-icon linea-basic"
                       data-icon="&#xe01b;"></i>
                    <h5 class="text-muted vb">Lớp mới chưa có gia sư</h5>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-6">
                    <h3 class="counter text-right m-t-15 text-megna">@Session["CLasses"]</h3>
                </div>
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="progress">
                        <div class="progress-bar progress-bar-megna" role="progressbar"
                             aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
                            <span class="sr-only">40% Complete (success)</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div>
                        <a class="btn btn-success" href="@Url.Action("Empty", "Classes")" role="button">Danh sách lớp trống</a>
                    </div>
                    <br />
                </div>
            </div>
        </div>
    </div>
    <!-- /.col -->
    <!--col -->
    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
        <div class="white-box">
            <div class="col-in row">
                <div class="col-md-6 col-sm-6 col-xs-6">
                    <i class="linea-icon linea-basic"
                       data-icon="&#xe00b;"></i>
                    <h5 class="text-muted vb">Số lượng gia sư của hệ thống</h5>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-6">
                    <h3 class="counter text-right m-t-15 text-primary">@Session["Tutors"]</h3>
                </div>
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="progress">
                        <div class="progress-bar progress-bar-primary" role="progressbar"
                             aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
                            <span class="sr-only">40% Complete (success)</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div>
                        <a class="btn btn-danger" href="@Url.Action("Index", "Tutors")" role="button">Danh sách gia sư</a>
                    </div>
                    <br />
                </div>
            </div>
        </div>
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->
<div>
    <a class="btn btn-info" href="@Url.Action("Index", "Registrations")" role="button">Xem danh sách đăng kí lớp</a>
</div>

