
@{
    ViewBag.Title = "Profile";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- Page Content -->
<div class="row">
    <div class="col-md-4 col-xs-12">
        <div class="white-box">
            <div class="user-bg">
                <img width="100%" alt="user" src="~/Public/plugins/images/users/varun.jpg">
                <div class="overlay-box">
                    <div class="user-content">
                        <a href="javascript:void(0)">
                            <img src="~/Public/plugins/images/users/varun.jpg"
                                 class="thumb-lg img-circle" alt="img">
                        </a>
                        <h4 class="text-white">@Session["Name"]</h4>
                        <h5 class="text-white">@Session["Email"]</h5>
                    </div>
                </div>
            </div>
            <div class="user-btm-box">
                <div class="col-md-4 col-sm-4 text-center">
                    <p class="text-purple"><i class="ti-facebook"></i></p>
                    <h2>Role:</h2>
                </div>
                <div class="col-md-4 col-sm-4 text-center">
                    <p class="text-blue"><i class="ti-twitter"></i></p>
                    <h1>@Session["Role"]</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-8 col-xs-12">
        <div class="white-box">
            @using (Html.BeginForm("Profile", "Dashboard", FormMethod.Post))
            {
                <form class="form-horizontal form-material">
                    <div class="form-group hide">
                        <label class="col-md-12">@Session["Role"] ID</label>
                        <div class="col-md-12">
                            <input type="text" placeholder="@Session["Id"]" name="id" value="@Session["Id"]"
                                   class="form-control form-control-line" readonly="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12">Full Name</label>
                        <div class="col-md-12">
                            <input type="text" placeholder="@Session["Name"]" name="name" value="@Session["Name"]"
                                   class="form-control form-control-line">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="example-email" class="col-md-12">Email</label>
                        <div class="col-md-12">
                            <input type="email" placeholder="@Session["Email"]" value="@Session["Email"]"
                                   class="form-control form-control-line" name="email"
                                   id="example-email">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12">Password</label>
                        <div class="col-md-12">
                            <input type="password" value="@Session["Password"]" name="password" class="form-control form-control-line">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12">Phone No</label>
                        <div class="col-md-12">
                            <input type="text" placeholder="@Session["PhoneNumber"]" name="phonenumber" value="@Session["PhoneNumber"]"
                                   class="form-control form-control-line">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-6">
                            <button class="btn btn-success">Update Profile</button>
                        </div>
                        <div class="col-sm-6">
                            <a class="btn btn-primary pull-right" href="@Url.Action("Logout", "Auth")" role="button">Đăng xuất</a>
                        </div>
                    </div>
                </form>
            }
        </div>
    </div>
</div>


