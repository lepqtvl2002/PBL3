@model IEnumerable<PBL3_Tutor.Models.Class>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Tutors/Views/Shared/_LayoutTutor.cshtml";
}
<h2 class="text-white">Danh sách các lớp mới</h2>

<div class="container bg-light">
    <p>
        @Html.ActionLink("Lớp miễn phí nhận lớp", "FreeClasses")
    </p>

    <!-- Fillter-->

    <div class="row g-2">
        @foreach (var item in Model)
        {
            <div class="col-3">
                <div class="p-3 border bg-light">
                    <p class="text-primary">
                        Mã Lớp:
                        ML@(item.classId)
                    </p>
                    <b>
                        @(item.Student.subject)
                        @(item.Student.grade)
                    </b>
                    <br />
                    <b>
                        Đ/c:
                        @(item.Student.address)
                    </b>
                    <br />
                    <b>
                        $
                        @Html.DisplayFor(modelItem => item.Student.paymentAmount) ₫
                    </b>
                    <br />
                    <b>
                        Yêu cầu:
                        @(item.Student.requirement)
                    </b>
                    <br />
                    <b>
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.classId })
                    </b>
                    <br />
                </div>
            </div>
        }
    </div>
</div>
