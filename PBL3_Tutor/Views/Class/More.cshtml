@model PBL3_Tutor.Models.Class

@{
    ViewBag.Title = "More";
}

<h2 class="text-white">Thông tin chi tiết lớp học:</h2>

<div>
    <div class="col-4">
        <div class="p-3 border bg-light">
            <h3 class="text-primary">
                Mã Lớp
                <b class="text-success">
                    ML@(Model.MaLop)
                </b>
            </h3>
            <p>
                <b>
                    @(Model.Student.Subject.TenMonHoc)
                    - Lớp @(Model.Student.Lop)
                </b>
            </p>
            <p>
                <b>Địa chỉ:</b>
                @(Model.Student.DiaChi)
            </p>
            <p>
                <b>Mức thu nhập:</b>
                @(Model.Student.SoTienChiTra) ₫/tháng
                , @(Model.Student.SoBuoiHoc) buổi/tuần
            </p>
            <p>
                <b> Yêu cầu:</b>
                @(Model.Student.YeuCauTrinhDo==true?"Giảng viên":"Sinh viên")
                @(Model.Student.YeuCauGioiTinh==true?"Nam":"Nữ")
            </p>
            <p>
                <b>Thời gian có thể học:</b>
                @(Model.Student.ThoiGianMongMuon)
            </p>
        </div>
        <div class="p-3 border bg-light">
            <h3 class="text-primary">
                Đặc điểm học sinh
            </h3>
            <p>
                <b>Giới tính: </b>
                @(Model.Student.GioiTinhHS==true?"Nam":"Nữ")
            </p>
            <p>
                @(Model.Student.HocLuc == null?"":"Học lực: " + Model.Student.HocLuc)
            </p>
            <p>
                @(Model.Student.TruongDangHoc == null?"":"Đang theo học trường " + Model.Student.TruongDangHoc)
            </p>
            <p>
                @(Model.Student.ThongTinBoXung == null?"":Model.Student.ThongTinBoXung)
            </p>
        </div>
        <p>
            <b>@(Model.PhiNhanLop == 0?"Miễn phí nhận lớp":"Phí nhận lớp: " + Model.PhiNhanLop + "%")</b>
            <br />
            *Phí nhận lớp chỉ nộp 1 lần, những lần tiếp theo sẽ không mất phí
        </p>
    </div>
</div>
<p>
    <div class="d-grid gap-2 d-md-flex">
        <a class="btn btn-success" href="@Url.Action("Index", "Class")" role="button">Trở lại danh sách</a>
        <a class="btn btn-primary" href="@Url.Action("Register", "Class")" role="button">Đăng ký thuê gia sư</a>
    </div>
</p>
